---
import Layout from "../layouts/Layout.astro";
import mainLogo from "/logo.svg";
import lion from "/lion.svg";
import logoWithText from "/logoWithText.svg";
import instagram from "/instagram.svg";
import "animate.css";
---

<Layout title="FTC VERTEX 15534">
	<div class="flex min-h-screen w-screen justify-center py-32">
		<div
			class="funkyRadius absolute -z-10 h-1/3 w-1/3 animate-spin-slow rounded-full bg-gradient-to-tr from-rose-400 to-red-600 opacity-90 blur-[60px]"
		>
		</div>
		<div class="w-1/2">
			<h1
				class="animate__animated animate__shakeX pb-8 text-center font-hype text-9xl"
			>
				4 0 4
			</h1>
			<h1 class="text-1xl pb-8 text-center font-display font-bold">
				Uh, oh.<br />Unfortunately, we couldn't locate the page you were
				looking for.<br />(Perhaps the robot messed up the wiring)
			</h1>
			<div class="duration-200 hover:scale-105">
				<a href="/">
					<h1
						class="text-center font-display text-2xl font-bold underline underline-offset-2"
					>
						Go to the main page
					</h1>
				</a>
			</div>
		</div>
	</div>
</Layout>
